{
  "name": "medical-appointments-api",
  "version": "1.0.0",
  "description": "Medical Appointments Serverless API for Peru and Chile",
  "type": "module",
  "main": "dist/handler.js",
  "scripts": {
    "build": "tsc",
    "build:clean": "rm -rf dist && pnpm run build",
    "dev": "serverless offline --stage dev",
    "local:start": "bash scripts/start-local.sh",
    "local:stop": "bash scripts/stop-local.sh",
    "local:setup": "node scripts/setup-localstack.js",
    "deploy": "serverless deploy",
    "deploy:dev": "serverless deploy --stage dev",
    "deploy:prod": "serverless deploy --stage prod",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "bash scripts/clean-and-restart.sh && concurrently --kill-others --success first \"pnpm run dev\" \"sleep 15 && cross-env NODE_ENV=development vitest run --config vitest.e2e.config.ts\"",
    "test:e2e:dev": "concurrently --names \"API,TESTS\" \"pnpm run dev\" \"sleep 15 && cross-env NODE_ENV=development vitest --config vitest.e2e.config.ts --reporter=verbose\"",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\" \"__tests__/**/*.ts\"",
    "clean": "rm -rf dist .serverless coverage"
  },
  "dependencies": {
    "@aws-sdk/lib-dynamodb": "^3.585.0",
    "mysql2": "^3.14.5",
    "pino": "^9.9.4",
    "ulid": "^3.0.1",
    "zod": "^4.1.5"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "serverless",
    "aws",
    "lambda",
    "dynamodb",
    "typescript",
    "medical",
    "appointments"
  ],
  "author": "Miguel Martin",
  "license": "MIT",
  "devDependencies": {
    "@aws-sdk/client-dynamodb": "^3.585.0",
    "@aws-sdk/client-eventbridge": "^3.883.0",
    "@aws-sdk/client-secrets-manager": "^3.886.0",
    "@aws-sdk/client-sns": "^3.883.0",
    "@aws-sdk/client-sqs": "^3.883.0",
    "@aws-sdk/client-ssm": "^3.886.0",
    "@eslint/js": "^9.35.0",
    "@serverless/typescript": "^4.18.2",
    "@types/aws-lambda": "^8.10.152",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.6.2",
    "serverless-esbuild": "^1.55.1",
    "serverless-localstack": "^1.3.1",
    "serverless-offline": "^14.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0",
    "vitest": "^3.2.4"
  }
}